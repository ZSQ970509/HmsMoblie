<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranceTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorTrance2</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ItemTitleTv">
        <item name="android:textColor">@color/itemTitleColor</item>
        <item name="android:textSize">@dimen/item_title_size</item>
    </style>

    <style name="ItemContentTv">
        <item name="android:textColor">@color/itemContentColor</item>
        <item name="android:textSize">@dimen/item_content_size</item>
    </style>

    <style name="SmallTv">
        <item name="android:textColor">@color/itemContentColor</item>
        <item name="android:textSize">@dimen/small_size</item>
    </style>
    <!-- 通用对话框风格 -->
    <style name="CommonDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/colorTrance</item>
    </style>
    <!-- 通用对话框按钮风格 -->
    <style name="CommonDialogBtnStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TvOnclickDataStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="IvNetImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/img_loading</item>
    </style>

    <style name="LineVerticalStyle">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#317bf6</item>
    </style>

    <style name="LineHorizontalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#317bf6</item>
    </style>

    <style name="TiltSensorStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/activity_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_navigation_bottom_item_background</item>
        <item name="android:textColor">@color/selector_navigation_bottom_item</item>
    </style>
</resources>
