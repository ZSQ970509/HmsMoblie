<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y170"
        android:layout_margin="@dimen/y20"
        tools:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_Driver_Icon_Select_Driver"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y120"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                app:srcCompat="@drawable/ic_img"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_Driver_Name_Select_Driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/iv_Driver_Icon_Select_Driver"
                android:text="TextView" />

            <ImageView
                android:id="@+id/iv_Power_Select_Driver"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/iv_Driver_Icon_Select_Driver"
                android:layout_marginEnd="29dp"
                app:srcCompat="@drawable/cb_select" />

            <ImageView
                android:id="@+id/iv_Net_Select_Driver"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_alignBottom="@+id/iv_Driver_Icon_Select_Driver"
                android:layout_alignStart="@+id/iv_Power_Select_Driver"
                app:srcCompat="@drawable/cb_select" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_Net_Select_Driver"
                app:srcCompat="@drawable/cb_select" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>