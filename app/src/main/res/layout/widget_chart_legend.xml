<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chartLegendIv"
        android:layout_width="@dimen/chartLegendWidth"
        android:layout_height="@dimen/chartLegendHeight"
        android:layout_gravity="center"
        android:background="@color/tiltSensorColorLineBlue" />

    <TextView
        android:id="@+id/chartLegendTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:text="Y轴角度"
        android:textSize="@dimen/chartLegendTextSize" />
</LinearLayout>
