<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:layout_margin="@dimen/y20"
        tools:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_Project_Video_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textColor="#000"
                android:layout_marginTop="@dimen/y16"
                android:layout_marginLeft="@dimen/y16"
                android:singleLine="true"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/item_Project_Video_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:textSize="@dimen/y24"
                android:singleLine="true"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y16"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:textSize="@dimen/y24"
                android:text="状态：" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y16"
                android:layout_alignStart="@+id/item_Project_Video_Name"
                android:layout_below="@+id/item_Project_Video_Name"
                android:textSize="@dimen/y24"
                android:text="工程地址：" />

            <TextView
                android:id="@+id/item_Project_Video_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:textSize="@dimen/y24"
                android:singleLine="true"
                android:text="TextView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>