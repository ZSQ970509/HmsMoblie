<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/titleBar"
        layout="@layout/actionbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/video_Project_Detail_Driver_List"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_margin="5dp"
                android:background="@drawable/boder_line"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/x85"
                    android:layout_height="@dimen/y85"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_marginStart="9dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:text="设备列表"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="7dp"
                    app:srcCompat="@android:drawable/arrow_down_float" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/video_Project_Detail_Online_Time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:background="@drawable/boder_line"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/x85"
                    android:layout_height="@dimen/y85"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_marginStart="9dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="在线时间"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="7dp"
                    app:srcCompat="@android:drawable/arrow_down_float" />


            </RelativeLayout>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="施工平面布置图" />
            <ImageView
                android:id="@+id/video_Project_Detail_Image"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y400"
                app:srcCompat="@mipmap/ic_launcher"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="项目详情" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_line"
                android:layout_margin="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/video_Project_Detail_Name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="项目名称:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="工程类别:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"

                    android:text="工程地址:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Quality_Supervision"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="工程质量监督机构:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Safety_Supervision"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="工程安全监督机构:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Money"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="工程造价:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="总建筑面积:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Start_Time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="计划开工日期:" />

                <TextView
                    android:id="@+id/video_Project_Detail_End_Time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="计划竣工日期:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Humen"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="项目负责人:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:background="@drawable/border_line_under"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="联系电话:" />

                <TextView
                    android:id="@+id/video_Project_Detail_Affiliated_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y60"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="所属地区:" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>
