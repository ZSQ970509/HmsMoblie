<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    android:orientation="vertical">

    <include
        android:id="@+id/titleBar"
        layout="@layout/actionbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="@dimen/y220"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="旧密码"
                android:textColor="#595959"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/editText_Change_OldPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#595959"
                android:textColorHint="#c9c9c9"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="@dimen/y220"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="新密码"
                android:textColor="#595959"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/editText_Change_NewPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#595959"
                android:textColorHint="#c9c9c9"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />


        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="@dimen/y220"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textColor="#595959"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/editText_Change_NewPassWord_Again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请再输入新密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#595959"
                android:textColorHint="#c9c9c9"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />

        <LinearLayout
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/y72"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y120"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_Change_Submit"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y72"
                app:srcCompat="@drawable/changepassword" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
