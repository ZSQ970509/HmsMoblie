<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:padding="@dimen/activity_margin_small"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLadderControlDeviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称：208C068E3" />

                    <TextView
                        android:id="@+id/tvLadderControlDeviceHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高度行程：17132m" />

                    <TextView
                        android:id="@+id/tvLadderControlDeviceRemoveState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="防拆状态：已安装" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLadderControlDeviceState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态：打开" />

                    <TextView
                        android:id="@+id/tvLadderControlDeviceBattle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电池电量：3.91V" />

                    <TextView
                        android:id="@+id/tvLadderControlDeviceBattleState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="充电状态：已充电" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLadderControlDeviceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最后一次操作：2018-01-30- 06:16:13" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
