<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y250">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y220"
        android:layout_margin="@dimen/y15"
        android:padding="@dimen/activity_margin_small"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLadderControlDeviceName"
                        android:layout_marginTop="@dimen/y22"
                        android:textSize="@dimen/y24"
                        android:textColor="#000000"
                        android:layout_width="@dimen/y400"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x16"
                        android:singleLine="true"
                        android:text="设备名称：208C068E3" />

                    <TextView
                        android:id="@+id/tvLadderControlDeviceHeight"
                        android:layout_marginTop="@dimen/y16"
                        android:layout_width="@dimen/y420"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x16"
                        android:textSize="@dimen/y24"
                        android:textColor="#666666"
                        android:singleLine="true"
                        android:text="高度行程：17132m" />

                    <TextView
                        android:id="@+id/tvLadderControlDeviceRemoveState"
                        android:layout_marginTop="@dimen/y16"
                        android:layout_width="@dimen/y420"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x16"
                        android:textSize="@dimen/y24"
                        android:textColor="#666666"
                        android:singleLine="true"
                        android:text="防拆状态：已安装" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLadderControlDeviceState"
                        android:layout_marginTop="@dimen/y22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y24"
                        android:textColor="#666666"
                        android:singleLine="true"
                        android:text="状态：打开" />

                    <TextView
                        android:id="@+id/tvLadderControlDeviceBattle"
                        android:layout_marginTop="@dimen/y16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y24"
                        android:textColor="#666666"
                        android:singleLine="true"
                        android:text="电池电量：3.91V" />

                    <TextView
                        android:id="@+id/tvLadderControlDeviceBattleState"
                        android:layout_marginTop="@dimen/y16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/y24"
                        android:textColor="#666666"
                        android:singleLine="true"
                        android:text="充电状态：已充电" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLadderControlDeviceTime"
                android:layout_marginTop="@dimen/y16"
                android:layout_width="@dimen/y420"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x16"
                android:textSize="@dimen/y24"
                android:textColor="#666666"
                android:singleLine="true"
                android:text="最后一次操作：2018-01-30- 06:16:13" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
