<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:orientation="horizontal"></LinearLayout>

    <FrameLayout
        android:id="@+id/main_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>
    <!-- 下方为侧滑栏布局-->
    <android.support.design.widget.NavigationView
        android:id="@+id/main_navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:overScrollMode="never"
        app:headerLayout="@layout/nav_header"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y440"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_RelativeLayout_UpadtePass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_gravity="right"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/y40"
                    android:layout_height="@dimen/y40"
                    android:layout_marginLeft="@dimen/x60"
                    app:srcCompat="@drawable/password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="修改密码"
                    android:textColor="#666666"
                    android:textSize="@dimen/y30" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_RelativeLayout_Setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:visibility="gone"
                android:layout_gravity="right"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/y40"
                    android:layout_height="@dimen/y40"
                    android:layout_marginLeft="@dimen/x60"
                    app:srcCompat="@drawable/setup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="权限设置"
                    android:textColor="#666666"
                    android:textSize="@dimen/y30" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_RelativeLayout_About"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_gravity="right"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/y40"
                    android:layout_height="@dimen/y40"
                    android:layout_marginLeft="@dimen/x60"
                    app:srcCompat="@drawable/about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="关于"
                    android:textColor="#666666"
                    android:textSize="@dimen/y30" />

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/main_RelativeLayout_Exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:gravity="center_vertical"
            android:layout_gravity="bottom|right">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/y40"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x60"
                app:srcCompat="@drawable/exit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:textSize="@dimen/y30"
                android:layout_centerHorizontal="true"
                android:textColor="#666666" />

        </RelativeLayout>


    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
