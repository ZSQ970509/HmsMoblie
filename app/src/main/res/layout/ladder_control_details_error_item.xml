<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y320">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y12"
        android:layout_marginBottom="@dimen/y12"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        tools:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/left_margin"
            android:layout_marginTop="@dimen/y10"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/llDetailsErrorImg"
                android:layout_width="@dimen/x250"
                android:layout_height="@dimen/y200"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/y22"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="@dimen/x198"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDetailsErrorBottomImg2"
                    android:gravity="center"
                    android:text="VS"
                    android:textSize="@dimen/y24" />

                <TextView
                    android:id="@+id/tvDetailsErrorVerificationImg2"
                    android:layout_width="@dimen/x198"
                    android:layout_height="@dimen/y83"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/textView12"
                    android:background="@drawable/verification_around"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:transitionName="@string/transitionNameVerificationImg" />

                <TextView
                    android:id="@+id/tvDetailsErrorBottomImg2"
                    android:layout_width="@dimen/x198"
                    android:layout_height="@dimen/y83"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/original_around"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:transitionName="@string/transitionNameBottomImg" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDetailsErrorName"
                android:layout_width="@dimen/x420"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y24"
                android:textColor="#000"
                android:layout_marginTop="@dimen/y22"
                android:layout_marginLeft="@dimen/x16"
                android:singleLine="true"
                android:text="操作员：XXXX" />


            <TextView
                android:id="@+id/tvDetailsErrorAccount"
                style="@style/ItemContentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvDetailsErrorName"
                android:layout_below="@+id/tvDetailsErrorName"
                android:layout_marginTop="@dimen/y35"
                android:singleLine="true"
                android:text="账号：xxXXXxx"
                android:textColor="#666"
                android:textSize="@dimen/y24" />

            <TextView
                android:id="@+id/tvDetailsErrorState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvDetailsErrorAccount"
                android:layout_below="@+id/tvDetailsErrorAccount"
                android:layout_marginTop="@dimen/y35"
                android:singleLine="true"
                android:text="操作情况：xxXXXxx"
                android:textColor="#666"
                android:textSize="@dimen/y24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvDetailsErrorState"
                android:layout_below="@+id/tvDetailsErrorState"
                android:singleLine="true"
                android:text="操作时间：xxXXXxx"
                android:textColor="#666"
                android:layout_marginTop="@dimen/y35"
                android:textSize="@dimen/y24"
                android:id="@+id/tvDetailsErrorTime" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
