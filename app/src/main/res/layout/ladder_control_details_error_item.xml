<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        tools:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/left_margin"
            android:layout_marginTop="@dimen/y10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetailsErrorName"
                style="@style/ItemTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操作员：XXXX" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvDetailsErrorAccount"
                    style="@style/ItemContentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/line"
                    android:layout_marginBottom="@dimen/y10"
                    android:singleLine="true"
                    android:text="账号：xxXXXxx" />

                <TextView
                    android:id="@+id/tvDetailsErrorState"
                    style="@style/ItemContentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="@dimen/y10"
                    android:singleLine="true"
                    android:text="操作情况：xxXXXxx" />

                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_blu"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        style="@style/SmallTv"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="原图" />

                    <TextView
                        style="@style/SmallTv"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="验证图" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDetailsErrorTime"
                style="@style/ItemContentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginBottom="@dimen/y10"
                android:singleLine="true"
                android:text="操作时间：xxXXXxx" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
