<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorTrance">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="210dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_round"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout_Video"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Video"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/shape_border_around"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="视频播放" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_Image_Log"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Image_Log"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/shape_border_around"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="全景图" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_Dip_Angle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Dip_Angle"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/shape_border_around"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="倾角数据" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>