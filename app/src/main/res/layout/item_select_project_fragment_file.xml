<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:layout_marginTop="4dp"
        android:layout_margin="4dp"
        tools:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/itemSelectProFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/y16"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/itemSelectProFileAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_toEndOf="@+id/textView"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="@dimen/y24" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginTop="@dimen/y16"
                android:text="状态："
                android:textSize="@dimen/y24" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemSelectProFileName"
                android:layout_alignStart="@+id/itemSelectProFileName"
                android:layout_marginTop="@dimen/y16"
                android:text="工程地址："
                android:textSize="@dimen/y24" />

            <TextView
                android:id="@+id/itemSelectProFileStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="@dimen/y24" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>